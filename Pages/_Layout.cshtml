@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - WMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body { min-height:100vh; }
        .sidebar { width: 240px; }
        @media (max-width: 768px) { .sidebar { display:none; } }
        .card-small { min-height: 100px; }
    </style>
</head>
<body>
    <div class="d-flex">
        <nav class="bg-light sidebar p-3">
            <a class="d-block mb-3 h4" href="/">WMS</a>
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link" href="/">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" href="/Products">Inventory</a></li>
                <li class="nav-item"><a class="nav-link" href="/Transactions">Stock In/Out</a></li>
                <li class="nav-item"><a class="nav-link" href="/Reports">Reports</a></li>
            </ul>
        </nav>

        <div class="flex-grow-1 p-4">
            <header class="d-flex justify-content-between align-items-center mb-4">
                <h4>@ViewData["Title"]</h4>
                <div><a class="btn btn-outline-secondary" href="#">Logout</a></div>
            </header>

            <main>
                @RenderBody()
            </main>
        </div>
    </div>



</html></body>n    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>